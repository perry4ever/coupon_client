    </swiper>


    <view class="weui-search-bar">
        <view class="weui-search-bar__form">
            <view class="weui-search-bar__box">
                <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                <input type="text" class="weui-search-bar__input" placeholder="搜索"/>
            </view>
            <label class="weui-search-bar__label" bindtap="searchTab">
                <icon class="weui-icon-search" type="search" size="14"></icon>
                <view class="weui-search-bar__text">点击此开始搜索</view>
            </label>
        </view>
    </view>


    


    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">


                <block wx:for-items="{{merchantList0}}" wx:key="{{item.merchantId}}">
                    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                        <scroll-view class="wx-scroll-view_6Bnkj2" lower-threshold="50" scroll-y="true" style="overflow-x: hidden; overflow-y: auto; " upper-threshold="50">
                            <view class="wx-navigator_movielist_item" hover-class="navigator-hover" bindtap="tapToFetchCoupon" id="{{item.merchantName}}">
                                <view class="wx-view_movilelist_item" >
                                    <image class="wx-image_movielist_item_cover" mode="aspectFit" src="{{item.bannerUrl}}" style="background-size: 100% 100%; background-position: 0% 0%; background-repeat: no-repeat; background-image: url(); "/>
                                    <view class="wx-view_6zMKSh" >
                                        <text class="wx-image_movielist_item_title" >{{item.merchantName}}</text>
                                        <text class="{{item.starStyle}}">{{item.score}}</text>
                                        <view class="wx-image_itemSubImageView">
                                            <image class="wx-image_itemSubImage"src="http://couponhola-1253611430.costj.myqcloud.com/manzhe.png" wx:if="{{ item.hasmanzhe}}"/>
                                            <image class="wx-image_itemSubImage"src="http://couponhola-1253611430.costj.myqcloud.com/daijin.png" wx:if="{{ item.hasdaijin}}"/>
                                            <image class="wx-image_itemSubImage"src="http://couponhola-1253611430.costj.myqcloud.com/manjian.png" wx:if="{{ item.hasmanjian}}"/>
                                            <image class="wx-image_itemSubImage"src="http://couponhola-1253611430.costj.myqcloud.com/maisong.png" wx:if="{{ item.hasmaisong}}"/>
                                        </view>
                                        <text class="wx-image_movielist_item_director" >\n人均价格：{{item.averangePrice}}</text>
                                        <text class="wx-image_movielist_item_actors" >\n地址：{{item.address}}</text>
                                    </view>
                                </view>
                            </view>
                        </scroll-view>
