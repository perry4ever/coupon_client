<view class="  wx-view_movie_info">
    <navigator url="../detail/detail">
        <text class="wx-text_title">{{currentMerchant.merchantName}}</text>
        <text class="wx-text_description_">\n点击进店看看></text>
        <text class="wx-text_description">\n地址：{{currentMerchant.address}}
        </text>
        <text class="wx-text_description">参考价格：{{currentMerchant.averangePrice}}元</text>
    </navigator>
</view>


<view class="page">
    <view class="page__hd">
        <view class="page__title">优惠券列表</view>
        <view class="page__desc">以下为店家正在发放的优惠券，以及其送券条件</view>
    </view>
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <block wx:for-items="{{currentCouponList}}" wx:key="{{item[0]}}">
                    <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" bindtap="gotoDetailTap">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{item[4]}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" wx:if="{{ item[1] == 'maisong' }}">
                            <view class="weui-media-box__title">买{{item[2]}}送{{item[3]}}</view>
                            <view class="weui-media-box__desc">送券条件：消费满50元</view>
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" wx:if="{{ item[1] == 'manzhe' }}">
                            <view class="weui-media-box__title">满{{item[2]}}打{{item[3]}}折</view>
                            <view class="weui-media-box__desc">送券条件：消费满50元</view>
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" wx:if="{{ item[1] == 'manjian' }}">
                            <view class="weui-media-box__title">满{{item[2]}}减{{item[3]}}</view>
                            <view class="weui-media-box__desc">送券条件：消费满50元</view>
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" wx:if="{{ item[1] == 'daijin' }}">
                            <view class="weui-media-box__title">代金{{item[2]}}</view>
                            <view class="weui-media-box__desc">送券条件：消费满50元</view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    </view>
</view>
